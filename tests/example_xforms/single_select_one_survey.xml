<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms/" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Single "select one" survey</h:title>
    <model>
      <instance>
        <single_select_one_survey id="single_select_one_survey">
          <Select_one_question/>
        </single_select_one_survey>
      </instance>
      <bind nodeset="/single_select_one_survey/Select_one_question" required="true()" type="select1"/>
    </model>
  </h:head>
  <h:body>
    <select1 ref="/single_select_one_survey/Select_one_question">
      <label>"Select one" question</label>
      <item>
        <label>Option 1</label>
        <value>option_1</value>
      </item>
      <item>
        <label>Option 2</label>
        <value>option_2</value>
      </item>
    </select1>
  </h:body>
</h:html>
